{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "dom.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./src/types"],
    "paths": {
      "screens/*": ["./src/screens/*"],
      "navigation/*": ["./src/navigation/*"],
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "utils/*": ["./src/utils/*"],
      "reducer/*": ["./src/reducer/*"],
      "services/*": ["./src/services/*"],
      "types/*": ["./src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
